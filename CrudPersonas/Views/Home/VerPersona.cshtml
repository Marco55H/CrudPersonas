 @model CapaEnt.ClsPersona

@{
    ViewData["Title"] = "Ver Persona";
}

<h2>Buscar Persona</h2>

<!-- Formulario para introducir el ID de la persona -->
<form asp-action="VerPersona" method="post">
    <div>
        <label for="id">ID de la Persona:</label>
        <input type="number" id="id" name="id" required />
        <button type="submit">Buscar</button>
    </div>
</form>

<hr />

<!-- Mostrar información de la persona si existe -->
@if (Model != null && Model.Id > 0)
{
    <h3>Información de la Persona</h3>
    <p><strong>ID:</strong> @Model.Id</p>
    <p><strong>Nombre:</strong> @Model.Nombre</p>
    <p><strong>Apellidos:</strong> @Model.Apellidos</p>
    <p><strong>Teléfono:</strong> @Model.Telefono</p>
    <p><strong>Dirección:</strong> @Model.Direccion</p>
    <p><strong>Foto:</strong></p>
    @if (!string.IsNullOrEmpty(Model.Foto))
    {
        <img src="@Model.Foto" alt="Foto de @Model.Nombre" style="max-width: 200px;" />
    }
    else
    {
        <p>No hay foto disponible.</p>
    }
    <p><strong>Fecha de Nacimiento:</strong> @Model.FechaNacimiento.ToShortDateString()</p>
    <p><strong>ID Departamento:</strong> @Model.IDDepartamento</p>
}
else
{
    <p>No se encontró ninguna persona. Introduzca un ID válido.</p>
}
